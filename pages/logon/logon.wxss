 .bt_connect{
  width: 200rpx;
  height: 70rpx;
  color: #6699FF;
  border: 3rpx solid #6699FF;
  border-radius: 80rpx;
  font-size: 35rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.hover-class-1 {
  top: 3rpx;
  background-color: #e7f5ff;
}
.btn1 {
  display: inline-block;
  margin: 20px;
  padding: 1em 2em;
  background: transparent;
  border: 2px;
  border-radius: 3px;
  font-weight: 400;
  text-align: center;
  box-shadow: 0px 2px 4px #2f05ec,0px 1px 2px #f30909;
}
.bg{
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  /*z-index 较大的元素会覆盖较小的元素在上层进行显示*/
  z-index: -1;
}

.btn1 text {
  background: -webkit-linear-gradient(left, #3412f3, #fd4a03);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
input{
  margin: 20rpx;
   padding-left: 10rpx;
   height: 80rpx;
   border: 1rpx solid #c3c3c3;
 }

